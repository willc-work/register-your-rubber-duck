{% extends "base.njk" %}

{% block content %}
    <h1 class="govuk-heading-xl">Name Your Duck</h1>

    <form action="/submit-duck-name" method="POST">
        <div class="govuk-form-group">
            <label class="govuk-label" for="duck-name">
                Enter your duck's name
            </label>
            <input class="govuk-input" id="duck-name" name="duckName" type="text" required>
        </div>

        {{ govukButton({
            text: "Continue"
        }) }}
    </form>
{% endblock %}
